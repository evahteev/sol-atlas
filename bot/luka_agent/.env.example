# Luka Agent Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Settings (Infrastructure Configuration)
# =============================================================================
# LLM settings are infrastructure concerns, not agent personality.
# These settings apply to ALL sub-agents unless overridden via CLI args.

# Ollama Configuration
OLLAMA_URL=http://localhost:11434

# Default LLM Configuration (used by all sub-agents)
DEFAULT_LLM_PROVIDER=ollama
DEFAULT_LLM_MODEL=llama3.2
DEFAULT_LLM_TEMPERATURE=0.7
DEFAULT_LLM_MAX_TOKENS=2000
DEFAULT_LLM_STREAMING=true

# OpenAI Configuration (optional)
# OPENAI_API_KEY=sk-...
# DEFAULT_LLM_PROVIDER=openai
# DEFAULT_LLM_MODEL=gpt-4o-mini

# Anthropic Configuration (optional)
# ANTHROPIC_API_KEY=sk-ant-...
# DEFAULT_LLM_PROVIDER=anthropic
# DEFAULT_LLM_MODEL=claude-sonnet-4

# =============================================================================
# Vision Model Settings (for image_description tool)
# =============================================================================
# Vision model uses Ollama with llava for image understanding and description.
# The OLLAMA_URL configured above is used for vision models as well.

# Vision model configuration
DEFAULT_VISION_MODEL=llava
VISION_ENABLED=true

# =============================================================================
# Elasticsearch Configuration (for knowledge_base tool)
# =============================================================================

ELASTICSEARCH_URL=http://localhost:9200
# ELASTICSEARCH_API_KEY=your_api_key_here
# ELASTICSEARCH_USERNAME=elastic
# ELASTICSEARCH_PASSWORD=your_password_here

# =============================================================================
# Application Settings
# =============================================================================

# Default sub-agent for CLI
DEFAULT_SUB_AGENT=general_luka

# =============================================================================
# CLI Tool Configuration
# =============================================================================

# Comma-separated list of enabled tools for CLI runs
# The CLI will error if a sub-agent requires tools not in this list
# Available tools: knowledge_base, sub_agent, youtube, image_description, support
CLI_ENABLED_TOOLS=knowledge_base,sub_agent,youtube,image_description,support

# =============================================================================
# API Keys for Tools (optional)
# =============================================================================

# YouTube API (for youtube tool)
# YOUTUBE_API_KEY=your_youtube_api_key_here

# =============================================================================
# CLI Settings
# =============================================================================

# Log level for CLI (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
